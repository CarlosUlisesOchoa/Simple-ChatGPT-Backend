{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "removeComments": true,
        "baseUrl": "."
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "migrations",
        "./dist/**",
        "test/**"
    ]
}